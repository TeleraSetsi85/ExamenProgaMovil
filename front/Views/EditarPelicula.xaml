<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="front.Views.EditarPelicula"
             Title="Editar Película">
    <VerticalStackLayout Padding="10" Spacing="10">
        <Label Text="Título:"/>
        <Entry x:Name="titleEntry" Keyboard="Text"/>

        <Label Text="Género:"/>
        <Entry x:Name="genreEntry" Keyboard="Text"/>

        <Label Text="Año de lanzamiento:"/>
        <Entry x:Name="releaseEntry" Keyboard="Numeric"/>

        <Label Text="URL de la imagen:"/>
        <Entry x:Name="imageUrlEntry" Keyboard="Default"/>

        <HorizontalStackLayout Spacing="10">
            <Button Text="Cancelar" Clicked="Cancelar_Clicked" 
                    BackgroundColor="Gray" TextColor="White" CornerRadius="15"/>
            <Button Text="Actualizar" Clicked="ActualizarPelicula_Clicked" 
                    CornerRadius="15" BackgroundColor="Black" TextColor="White"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
