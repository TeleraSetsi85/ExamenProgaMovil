<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="front.Views.AgregarPelicula"
             Title="Agregar Película">
    <VerticalStackLayout Padding="15" Spacing="10">
        <Label Text="Título:"/>
        <Entry x:Name="titleEntry" Keyboard="Text"/>

        <Label Text="Género:"/>
        <Entry x:Name="genreEntry" Keyboard="Text"/>

        <Label Text="Año de lanzamiento:"/>
        <Entry x:Name="releaseEntry" Keyboard="Numeric"/>

        <Label Text="URL de la imagen:"/>
        <Entry x:Name="imageUrlEntry" Keyboard="Url"/>

        <Button Text="Guardar" Clicked="GuardarPelicula_Clicked" 
                CornerRadius="15" BackgroundColor="Black" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>
